{
  "name": "auto-contribution",
  "version": "7.0.0",
  "description": "Github Action to Generate Profile 3D Contributions in SVG.",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outdir=dist --platform=node --sourcemap --minify --analyze=verbose --external:canvas",
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "tsc": "tsc",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "test": "jest",
    "test:coverage": "jest --collect-coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/spec/*.(spec|test).(ts|js)"
    ]
  },
  "keywords": [],
  "author": "offensive-vk",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^14.18.63",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "8.3.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "rimraf": "^2.7.1",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "5.7.0-beta"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^4.0.0",
    "@types/d3": "^6.7.8",
    "@types/jsdom": "^16.2.15",
    "axios": "^0.28.1",
    "d3": "^6.7.0",
    "esbuild": "^0.24.2",
    "jsdom": "^16.7.0"
  }
}
